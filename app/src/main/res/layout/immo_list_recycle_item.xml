<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/immo_list_recycle_image"
            android:layout_width="@dimen/recycle_image_size"
            android:layout_height="@dimen/recycle_image_size"
            android:src="@drawable/no_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/recyle_item_height_padding"
            android:layout_marginBottom="@dimen/recyle_item_height_padding"
            android:layout_marginLeft="@dimen/recyle_item_width_padding">

            <TextView
                android:id="@+id/immo_list_recycle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recycle_item_text_type_size"
                android:textColor="@android:color/black"
                android:text="@string/no_text_yet"/>

            <TextView
                android:id="@+id/immo_list_recyle_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recycle_item_text_city_size"
                android:textColor="@android:color/darker_gray"
                android:text="@string/no_text_yet"/>

            <TextView
                android:id="@+id/immo_list_recycle_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recycle_item_text_price_size"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/no_text_yet"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>


