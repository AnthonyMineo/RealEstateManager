<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/detail_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/detail_fragment_main_container_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media_title"
            android:textSize="@dimen/detail_fragment_title_size"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/detail_fragment_element_bottom_margin"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_detail_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_view_height"
            android:layout_marginBottom="@dimen/detail_fragment_element_bottom_margin"/>

        <ImageView
            android:id="@+id/fragment_detail_zoom_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/no_photo"
            android:layout_marginBottom="@dimen/detail_fragment_element_bottom_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_title"
            android:textSize="@dimen/detail_fragment_title_size"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/detail_fragment_element_bottom_margin"/>

        <TextView
            android:id="@+id/fragment_detail_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_text_yet"
            android:textSize="@dimen/detail_fragment_text_size"
            android:layout_marginBottom="@dimen/detail_fragment_element_bottom_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/detail_fragment_element_bottom_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detail_fragment_relative_layout_margin">

                    <ImageView
                        android:id="@+id/surface_icon"
                        android:layout_width="@dimen/detail_fragment_icon_size"
                        android:layout_height="@dimen/detail_fragment_icon_size"
                        android:src="@drawable/baseline_aspect_ratio_black_48"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        android:id="@+id/surface_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:textStyle="bold"
                        android:text="@string/surface_title"
                        android:layout_toEndOf="@id/surface_icon"
                        android:layout_marginStart="@dimen/detail_fragment_relative_layout_margin"/>

                    <TextView
                        android:id="@+id/detail_fragment_surface_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:text="@string/no_text_yet"
                        android:layout_toEndOf="@id/surface_icon"
                        android:layout_below="@id/surface_title"
                        android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detail_fragment_relative_layout_margin">

                    <ImageView
                        android:id="@+id/home_icon"
                        android:layout_width="@dimen/detail_fragment_icon_size"
                        android:layout_height="@dimen/detail_fragment_icon_size"
                        android:src="@drawable/baseline_home_black_48" />

                    <TextView
                        android:id="@+id/rooms_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:textStyle="bold"
                        android:text="@string/rooms_title"
                        android:layout_toEndOf="@id/home_icon"
                        android:layout_marginStart="@dimen/detail_fragment_relative_layout_margin"/>

                    <TextView
                        android:id="@+id/detail_fragment_rooms_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:text="@string/no_text_yet"
                        android:layout_toEndOf="@id/home_icon"
                        android:layout_below="@id/rooms_title"
                        android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detail_fragment_relative_layout_margin">

                    <ImageView
                        android:id="@+id/bath_icon"
                        android:layout_width="@dimen/detail_fragment_icon_size"
                        android:layout_height="@dimen/detail_fragment_icon_size"
                        android:src="@drawable/baseline_hot_tub_black_48" />

                    <TextView
                        android:id="@+id/bath_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:textStyle="bold"
                        android:text="@string/bath_title"
                        android:layout_toEndOf="@id/bath_icon"
                        android:layout_marginStart="@dimen/detail_fragment_relative_layout_margin"/>

                    <TextView
                        android:id="@+id/detail_fragment_bath_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:text="@string/no_text_yet"
                        android:layout_toEndOf="@id/bath_icon"
                        android:layout_below="@id/bath_title"
                        android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detail_fragment_relative_layout_margin">

                    <ImageView
                        android:id="@+id/bed_icon"
                        android:layout_width="@dimen/detail_fragment_icon_size"
                        android:layout_height="@dimen/detail_fragment_icon_size"
                        android:src="@drawable/baseline_hotel_black_48" />

                    <TextView
                        android:id="@+id/bed_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:textStyle="bold"
                        android:text="@string/bed_title"
                        android:layout_toEndOf="@id/bed_icon"
                        android:layout_marginStart="@dimen/detail_fragment_relative_layout_margin"/>

                    <TextView
                        android:id="@+id/detail_fragment_bed_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/detail_fragment_text_size"
                        android:text="@string/no_text_yet"
                        android:layout_toEndOf="@id/bed_icon"
                        android:layout_below="@id/bed_title"
                        android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/detail_fragment_relative_layout_margin">

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="@dimen/detail_fragment_icon_size"
                    android:layout_height="@dimen/detail_fragment_icon_size"
                    android:src="@drawable/baseline_location_on_black_48" />

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_fragment_text_size"
                    android:textStyle="bold"
                    android:text="@string/location_title"
                    android:layout_toEndOf="@id/location_icon"
                    android:layout_marginStart="@dimen/detail_fragment_relative_layout_margin"/>

                <TextView
                    android:id="@+id/detail_fragment_address_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_fragment_text_size"
                    android:text="@string/no_text_yet"
                    android:layout_toEndOf="@id/location_icon"
                    android:layout_below="@id/location_title"
                    android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                <TextView
                    android:id="@+id/detail_fragment_cpt_address_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_fragment_text_size"
                    android:text="@string/no_text_yet"
                    android:layout_toEndOf="@id/location_icon"
                    android:layout_below="@id/detail_fragment_address_text_view"
                    android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                <TextView
                    android:id="@+id/detail_fragment_city_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_fragment_text_size"
                    android:text="@string/no_text_yet"
                    android:layout_toEndOf="@id/location_icon"
                    android:layout_below="@id/detail_fragment_cpt_address_text_view"
                    android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                <TextView
                    android:id="@+id/detail_fragment_postal_code_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_fragment_text_size"
                    android:text="@string/no_text_yet"
                    android:layout_toEndOf="@id/location_icon"
                    android:layout_below="@id/detail_fragment_city_text_view"
                    android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

                <TextView
                    android:id="@+id/detail_fragment_country_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_fragment_text_size"
                    android:text="@string/no_text_yet"
                    android:layout_toEndOf="@id/location_icon"
                    android:layout_below="@id/detail_fragment_postal_code_text_view"
                    android:layout_marginStart="@dimen/detail_fragment_text_left_margin"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/static_map_image_view"
                android:layout_width="@dimen/static_map_size"
                android:layout_height="@dimen/static_map_size"
                android:layout_gravity="center"
                android:src="@drawable/no_image"/>
        </LinearLayout>



    </LinearLayout>

</ScrollView>